<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGS" value="../logs/geological-sections-api"/>

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, Asia/Kolkata} %5p --- %C{1} : %m%n</Pattern>
        </layout>
    </appender>
    <appender name="Application" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/voluntary-discon-recon-${hostname}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/archived/voluntary-discon-recon-${hostname}-%d{yyyy-MM-dd, Asia/Kolkata}.log
            </fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, Asia/Kolkata} %5p --- %C{1} : %m%n</pattern>
        </encoder>
    </appender>


    <!-- LOG everything at INFO level -->
    <root level="info">
        <appender-ref ref="Application"/>
        <appender-ref ref="Console"/>
    </root>
</configuration>